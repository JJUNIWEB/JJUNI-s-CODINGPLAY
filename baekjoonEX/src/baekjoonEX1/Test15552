package baekjoonEX1;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;
import java.util.StringTokenizer;

public class Test15552 {

	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));			//입력 받기
		BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));			
		
		int T = Integer.parseInt(br.readLine());
		
		StringTokenizer st;
		
		for(int i = 0; i<T; i++) {
			st = new StringTokenizer(br.readLine()," ");		//주어지는 두 정수 문자열 분리
			bw.write((Integer.parseInt(st.nextToken()) + Integer.parseInt(st.nextToken()))+ "\n");		//받은 문자열 인트형으로 변환 후 더해준 값 bw.write에 넣어줌
		}
		br.close();		
			
		bw.flush();		
		bw.close();

	}

}
